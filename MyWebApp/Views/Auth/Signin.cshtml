@model SigninViewModel
<div class="container">
    <div class="row">
        <form class="col-5 mt-5" method="post" asp-controller="Auth" asp-action="Signin"
              asp-route-returnUrl="@ViewData["returnUrl"]">
            <div class="mb-3">
                <label asp-for="UserName" class="form-label">نام کاربری</label>
                <input asp-for="UserName" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="PassWord" class="form-label">رمز عبور</label>
                <input asp-for="PassWord" type="password" class="form-control">
            </div>
   
            <button type="submit" class="btn btn-dark">ورود به سیستم</button>
        </form>
    </div>
</div>
